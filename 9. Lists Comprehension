userLists = []

print("Enter couple numbers for a lists and press 'd' when finished:\n")
while True:
    user_input = input()
    if "d" in user_input:
        break
    user_input = userLists.append(int(user_input))
    print(userLists)
# List comprehension
evenList = [number for number in userLists if number % 2 == 0]
print(evenList)
